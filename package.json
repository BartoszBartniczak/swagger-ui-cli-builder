{
  "name": "swagger-ui-cli-builder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "yaml,yml",
      "quiet": false,
      "delay": 500
    }
  },
  "scripts": {
    "test": "swagger-cli validate /app/openapi.yaml",
    "build": "swagger-cli bundle /app/src/openapi.yaml --outfile /app/openapi.yaml --type yaml",
    "watch": "npm-watch",
    "serve": "http-server ./swagger-ui -c-1 -s"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "http-server": "^0.12.3",
    "npm-watch": "^0.10.0"
  }
}
